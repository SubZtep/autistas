# Root .env file for docker-compose

# Docker image (required for production)
DOCKER_IMAGE=subztep/autistas-backend

# Docker Hub credentials (required for Watchtower to pull private images)
# Leave empty if using public images
DOCKERHUB_USERNAME=
DOCKERHUB_TOKEN=

# Database (required for production)
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DATA_DIR=/mnt/volume/autistas/postgres

# Backend API (required)
ALLOWED_ORIGINS=https://yourdomain.com
OLLAMA_BASE_URL=http://your-ollama-server:11434
OLLAMA_MODEL=smollm2
