{
  "name": "autistas",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Mobile app to help parents and caregivers of kids with autism",
  "author": "Andras Serfozo <subztep@gmail.com>",
  "license": "Unlicense",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "db:studio": "pnpm --filter backend db:studio",
    "mobile": "pnpm --filter mobile start",
    "mobile:web": "pnpm --filter mobile web",
    "mobile:ios": "pnpm --filter mobile ios",
    "mobile:android": "pnpm --filter mobile android",
    "backend": "pnpm --filter backend dev",
    "common:build": "pnpm --filter @autistas/common build",
    "common:dev": "pnpm --filter @autistas/common dev",
    "build": "pnpm --filter @autistas/common build && pnpm --filter backend build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix"
  },
  "pnpm": {
    "overrides": {
      "drizzle-orm": "^0.44.7"
    },
    "ignoredBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.46.3"
  }
}
